@model IEnumerable<WebApp.Models.Category>

@{
    // ViewData["Title"] = "Index";
    ViewData["PageTitle"] = "Categories";
    ViewData["PageActionText"] = "+ New Category";
    ViewData["PageActionUrl"] = "/Categories/AddOrEdit";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrEdit">Create New</a>
</p>

<div class="row">
    <div class="col-md-7">
		<ejs-grid id="categories" dataSource="Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Category" field="Name"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
		</ejs-grid>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-icons fa-beat-fade fa-2xl"></i>
        </div>
    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm btn-outline-success no-a-decoration" href="/Categories/AddOrEdit/${CategoryId}" style="border:none">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/Categories/Delete/${CategoryId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger btn-link no-a-decoration" style="border:none"
                onclick="return confirm(&quot;Are you sure you want to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg "></i>
            </button>
        </form>
    </div>
</script>

